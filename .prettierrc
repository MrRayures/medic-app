{
    "trailingComma": "all",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "printWidth": 100,
    "plugins": ["prettier-plugin-jinja-template"],
    "overrides": [
        {
            "files": ["*.scss"],
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": ["*.njk"],
            "options": {
                "parser": "jinja-template"
            }
        }
    ]
}
